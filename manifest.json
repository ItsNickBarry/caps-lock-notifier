{
  "manifest_version": 2,

  "name": "Caps Lock Notifier",
  "version": "1.0.0",

  "description": "Add an icon to password fields to indicate whether caps lock is on.",

  "developer": {
    "name": "Nick Barry"
  },

  "homepage_url": "https://github.com/itsnickbarry/caps-lock-notifier",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["caps_lock_notifier.js"]
    }
  ]
}
